<% if @page %>

	<div class="page">
	  <div class="bd">
	    <%= @page.body_rendered %>
	  </div>
	</div>
	

<% else %>
	<div class="hfeed">
	  <% @posts.all do |post| %>
	    <%= render_template('post/compact', :post => post) %>
	  <% end %>
	</div>

	<%=
	render_template('util/pager',
	    :prev_text => '&laquo; Newer stuff',
	    :next_text => 'Older stuff &raquo;')
	%>

<% end %>